<template>
    <div class="container_reservatorio">
        <div class="vertical-text_reservatorio">{{ tankName }}</div>
        <v-card class="elemento_caixa_agua">
            <!-- Indicador de extravas칚o -->
            <div class="overflow-indicator" :class="{ 'active': isOverflowing }">
                <div class="overflow-drops">
                    <div class="drop" v-for="n in 5" :key="n" :style="{ animationDelay: (n * 0.2) + 's' }">游눦</div>
                </div>
                <div class="overflow-text" v-if="isOverflowing">EXTRAVASANDO!</div>
            </div>

            <!-- Corpo principal da caixa -->
            <div class="tank-body">
                <!-- N칤vel da 치gua -->
                <div class="water-level" :style="{ 
                         height: waterHeightPercent + '%',
                         backgroundColor: waterColor 
                     }">
                    <div class="water-surface"></div>
                    <div class="water-bubbles">
                        <div class="bubble" v-for="n in 3" :key="n" :style="{ animationDelay: (n * 1.5) + 's' }"></div>
                    </div>
                </div>

                <!-- Marca칞칫es laterais -->
                <div class="tank-markings">
                    <div class="marking" v-for="i in 4" :key="i" :style="{ bottom: (i * 25) + '%' }">
                        <span class="marking-line"></span>
                        <span class="marking-label">{{ (i * 25) }}%</span>
                    </div>
                </div>
            </div>

            

            

            <!-- Display de status -->
            <div class="status-display">
                <div class="status-text" :style="{ color: statusColor }">
                    {{ statusText }}
                </div>
                <div class="level-percentage">
                    {{ Math.round(waterHeightPercent) }}%
                </div>
                <div class="sensor-reading">
                    Sensor: {{ currentSensorDistance }}cm
                </div>
            </div>
        </v-card>
    </div>
</template>

<script>
    export default {
    props: {
        sensorDistance: {
            type: Number,
            default: 50
        },
        tankName: {
            type: String,
            default: 'Reservat칩rio Principal'
        }
    },
    data() {
        return {
            // CONFIGURA칂칏ES AJUST츼VEIS
            emptyDistance: 90,    // 90cm = tanque vazio
            overflowDistance: 10, // 10cm = extravasando
            inited: false,
            currentSensorDistance: 50 // Valor interno para o sensor
        };
    },
    watch: {
        msg() {
            if (this.msg && this.msg.payload !== undefined) {
                // Recebe o valor do sensor via Node-RED
                this.currentSensorDistance = Math.min(Math.max(this.msg.payload, this.overflowDistance), this.emptyDistance);
            }
        },
        sensorDistance() {
            // Atualiza quando a prop muda (para demonstra칞칚o)
            this.currentSensorDistance = this.sensorDistance;
        }
    },
    computed: {
        waterHeightPercent() {
            // Converte a dist칙ncia do sensor em porcentagem de 치gua
            // Quanto menor a dist칙ncia, maior o n칤vel de 치gua
            const range = this.emptyDistance - this.overflowDistance;
            const currentLevel = this.emptyDistance - this.currentSensorDistance;
            const percentage = Math.max(0, Math.min(100, (currentLevel / range) * 100));
            
            // Se est치 extravasando, mostra 100%
            return this.currentSensorDistance <= this.overflowDistance ? 100 : percentage;
        },

        isOverflowing() {
            return this.currentSensorDistance <= this.overflowDistance;
        },

        waterColor() {
            if (this.isOverflowing) return '#ff4757';
            if (this.waterHeightPercent <= 25) return '#ff6b6b';
            if (this.waterHeightPercent <= 50) return '#ffa502';
            if (this.waterHeightPercent <= 75) return '#3742fa';
            return '#2ed573';
        },

        statusText() {
            if (this.isOverflowing) return 'EXTRAVASANDO';
            if (this.waterHeightPercent <= 25) return 'CR칈TICO';
            if (this.waterHeightPercent <= 50) return 'BAIXO';
            if (this.waterHeightPercent <= 75) return 'M칄DIO';
            return 'CHEIO';
        },

        statusColor() {
            if (this.isOverflowing) return '#ff4757';
            if (this.waterHeightPercent <= 25) return '#ff4757';
            if (this.waterHeightPercent <= 50) return '#ffa502';
            if (this.waterHeightPercent <= 75) return '#3742fa';
            return '#2ed573';
        }
    },
    mounted() {
        // Inicializa com o valor da prop
        this.currentSensorDistance = this.sensorDistance;
        this.inited = true;
    }
};
</script>

