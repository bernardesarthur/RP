var localizacao = {
    "draggable": true,
    "name": "obj",
    "lat": msg.payload.lat,
    "lon": msg.payload.lon,
    "radius": 13,
    "color": '#000000',
    "opacity": 1,
    "fillColor": '#F52D00',
    "fillOpacity": 1,
    "command": {       
        "zoom": 17,
        "lat": msg.payload.lat,
        "lon": msg.payload.lon,
    } 
};

var bateria = msg.payload.batt


global.set("bateria_obj", bateria)

global.set("localizacao_obj", localizacao)

node.send([{payload: localizacao}, {payload: bateria}])

